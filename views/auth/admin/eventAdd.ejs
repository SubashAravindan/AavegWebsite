<% layout('../../partials/template') -%>
<% stylesheet('css/eventAdd.css') %>
<% script('https://unpkg.com/sweetalert/dist/sweetalert.min.js') -%>
<% script('js/eventAddScript.js') -%>

<%if(typeof error !== 'undefined'){ %>
  <div id="error"><%=error%></div>
<%}%>
<div id="formWrapper">
  <h1 class="align-center">
      Create new Event
  </h1> 
  <label for="eventName">Name of Event: </label>
  <input type="text" id="eventName" name='eventName' required><br/>
  <div class="row">
      <div class="col-6 col-12-xsmall">
          <label for="cluster">Cluster: </label>
          <select name="cluster" id="cluster" required>
              <option value="">Please select</option>
              <%data.clusters.forEach(cluster=>{%>
              <option value="<%=cluster%>"><%=cluster%></option>
          <% })%>
          </select>
      </div>
      <div class="col-6 col-12-xsmall">
          <label for="cup">Cup: </label>
          <select name="cup" id="cup" required>
              <option value="">Please select</option>
              <%data.cups.forEach(cup=>{%>
              <option value="<%=cup%>"><%=cup%></option>
          <% })%>
          </select>            
      </div>
  </div>
  <div id="wrapdiv">
      <button id="addPoints"> Add points for more Winners </button><br/><br/>
      <label for="points1">Points for Winner 1: </label>
      <input type="number" id = 'points1' name='points1'><br/>
      <label for="points2">Points for Winner 2: </label>
      <input type="number" id = 'points2' name='points2'><br/>
      <label for="points3">Points for Winner 3: </label>
      <input type="number" id = 'points3' name='points3'><br/>
  </div><br/>
  <label for="venue">Venue: </label>
  <select name="venue" id="venue" required >
      <option value="">Please Select </option>
      <%data.venues.forEach(v=>{%>
      <option value="<%=v._id%>"><%=v.name%></option>
  <% })%>
  </select><br/>
  <label for="description">Description: </label>
  <textarea id="description" name='description' placeholder="Write nice desc plis"></textarea><br/>
  <label for="rules">Rules: </label>
  <input type="text" id="rules" name='rules' placeholder="Link to rules doc"><br/>
  <div class="row">
    <div class="col-6 col-12-xsmall">
        <label for="startTime">Starting Time: </label>
        <input type="datetime-local" id='startTime' name='startTime'>
    </div>
    <div class="col-6 col-12-xsmall">
        <label for="endTime">Ending Time: </label>
        <input type="datetime-local" id='endTime' name='endTime'><br/><br/>
    </div>
  </div>    
  <button id="submitCreate" class="button primary large"> Submit </button>
</div>
